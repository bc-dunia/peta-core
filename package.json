{
  "name": "peta-core",
  "version": "1.0.2",
  "type": "module",
  "description": "Peta Core - Backend service for MCP protocol",
  "main": "dist/index.js",
  "scripts": {
    "dev": "NODE_ENV=development node scripts/start-app.js",
    "dev:backend-only": "tsx src/index.ts",
    "build": "tsc && copyfiles -u 1 'src/**/*.html' dist/",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "start": "NODE_ENV=production node scripts/start-app.js",
    "start:prod": "npm run build && npm start",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "db:start": "docker compose up -d postgres",
    "db:stop": "docker compose down",
    "db:restart": "docker compose restart postgres",
    "db:logs": "docker compose logs -f postgres",
    "db:init": "node scripts/unified-db-init.js",
    "db:init:verbose": "DB_INIT_VERBOSE=true node scripts/unified-db-init.js",
    "db:migrate:create": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "db:reset": "prisma migrate reset --force",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@prisma/client": "^6.17.1",
    "adm-zip": "^0.5.16",
    "bcryptjs": "^3.0.2",
    "chalk": "^5.3.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.2.1",
    "gray-matter": "^4.0.3",
    "jsonwebtoken": "^9.0.2",
    "ora": "^8.1.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.5",
    "@types/uuid": "^10.0.0",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "jest": "^29.7.0",
    "prisma": "^6.13.0",
    "tsx": "^4.20.5",
    "typescript": "^5.7.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/src/**/*.test.ts",
      "**/tests/**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/typescript-sdk-main/"
    ]
  }
}
