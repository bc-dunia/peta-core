# Database connection
DATABASE_URL="postgresql://peta:peta123@localhost:5433/peta_mcp_gateway?schema=public"

# JWT secret (please change to a secure random string)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Development environment configuration
NODE_ENV="development"

# Logging configuration (Pino Logger)
LOG_LEVEL="info"            # Log level: trace|debug|info|warn|error|fatal (dev default: trace, prod default: info)
LOG_PRETTY="false"           # Whether to use pretty output (dev default: true, prod default: false)
LOG_RESPONSE_MAX_LENGTH=300  # Maximum characters for response result, will be truncated if exceeded (0=unlimited, dev recommendation: 2000, prod recommendation: 300)

# Backend server configuration
BACKEND_PORT=3002
BACKEND_HTTPS_PORT=3002      # HTTPS port, defaults to same as HTTP port

# HTTPS/SSL configuration
ENABLE_HTTPS=false           # Enable HTTPS (when true, both services enable HTTPS, when false, both use HTTP)
SSL_CERT_PATH=/Users/peta/cert/localhost+2.pem  # SSL certificate path
SSL_KEY_PATH=/Users/peta/cert/localhost+2-key.pem    # SSL private key path


PETA_CLOUD_API_URL='https://peta-cloud.xxx.workers.dev'
